<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_baseline_foundation_24"
        android:id="@+id/image_yayasan"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_yayasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Nama Yayasan"
            android:textColor="#2D2E2B"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_donasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Detail Donasi"
            android:textColor="#2D2E2B"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>